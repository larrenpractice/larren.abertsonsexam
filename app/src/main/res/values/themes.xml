<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="ShoppingSearchViewBar">
        <item name="android:background">@drawable/rectangle_5</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">number</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:singleLine">false</item>
        <item name="queryBackground">@color/zxing_transparent</item>
    </style>

    <style name="SearchQueryLabel">
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>